 <script type="text/javascript">
    $("button").click(function(){
        let username = $("input[type='text']").val();
        let password = $("input[type='password']").val();
        $.ajax({
            dataType: "JSON",
            data: {
                username: username,
                password: password
            },
            url: "/book/login",
            type: "POST",
            success: function(data) {
                if (data.status == 1) {
                    alert("验证成功!");
                    window.location.href = './book/bookhome';
                } else if (data.status == 0) {
                    alert("用户名或密码错误!");
                    $("input[type='password']").val("");
                } else {
                    alert("其他错误!");
                    $("input[type='password']").val("");
                }
            },
            error: function(err) {
                alert("请求失败!");
            }
        });
    });
</script>
