      <div class="content-body">
        <!-- Basic form layout section start -->
        <section id="basic-form-layouts">
          <div class="row match-height">
            <div class="col-md-10">
              <div class="card">
                <div class="card-header">
                  <h4 class="card-title" id="basic-layout-form">基本信息</h4>
                  <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                  <div class="heading-elements">
                    <ul class="list-inline mb-0">
                      <li><a data-action="collapse"><i class="icon-minus4"></i></a></li>
                      <li><a data-action="reload"><i class="icon-reload"></i></a></li>
                      <li><a data-action="expand"><i class="icon-expand2"></i></a></li>
                      <li><a data-action="close"><i class="icon-cross2"></i></a></li>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="card-body collapse in">
                <div class="card-block">
                  <form class="form">
                    <div class="form-body">
                      <h4 class="form-section"><i class="icon-list"></i><%= deal_id %></h4>
                          
                    <div class="row"> 
                        <div class="col-md-6">
                          <div class="form-group">
                            <label for="projectinput1">订单号</label>
                              <input type="text" id="emailAddr" class="form-control" placeholder="E-mail" name="email"
                                   value=<%= order_id %>>
                          </div>
                        </div>
                    </div>     
                    
                    <div class="row"> 
                        <div class="col-md-6">
                          <div class="form-group">
                            <label for="projectinput1">卖家ID</label>
                              <input type="text" id="emailAddr" class="form-control" placeholder="E-mail" name="email"
                                   value=<%= seller_id %>>
                          </div>
                        </div>
                    </div>    
                    
                    <div class="row"> 
                        <div class="col-md-6">
                          <div class="form-group">
                            <label for="projectinput1">买家ID</label>
                              <input type="text" id="emailAddr" class="form-control" placeholder="E-mail" name="email"
                                   value=<%= buyer_id %>>
                          </div>
                        </div>
                    </div>    
                          
                    <div class="row"> 
                        <div class="col-md-6">
                          <div class="form-group">
                            <label for="projectinput1">金额</label>
                              <input type="text" id="emailAddr" class="form-control" placeholder="E-mail" name="email"
                                   value=<%= amount %>>
                          </div>
                        </div>
                    </div>        
                          
                    <div class="row"> 
                        <div class="col-md-6">
                          <div class="form-group">
                            <label for="projectinput1">成交时间</label>
                              <input type="text" id="emailAddr" class="form-control" placeholder="E-mail" name="email"
                                   value=<%= created_time %>>
                          </div>
                        </div>
                    </div>         
                          
                    <div class="row"> 
                        <div class="col-md-6">
                          <div class="form-group">
                            <label for="projectinput1">订单内容</label>
                              <input type="text" id="emailAddr" class="form-control" placeholder="E-mail" name="email"
                                   value=<%= infomation %>>
                          </div>
                        </div>
                    </div>        
                    
                    <div class="row"> 
                        <div class="col-md-6">
                          <div class="form-group">
                            <label for="projectinput1">成交状态</label>
                              <input type="text" id="emailAddr" class="form-control" placeholder="E-mail" name="email"
                                   value=<%= transaction_status %>>
                          </div>
                        </div>
                    </div>    

                    <div class="form-actions">
                      <button id="cancle" type="button" class="btn btn-warning mr-1">
                        <i class="icon-cross2"></i> 取消
                      </button>
                      <button id="submit" type="button" class="btn btn-primary">
                        <i class="icon-check2"></i> 保存
                      </button>
                    </div>
                  </form>
