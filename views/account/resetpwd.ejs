<script type="text/javascript">
  $("#submit").click(function(){
      let username = $("#user-name").val();
      let emailAddress = $("#user-email").val();
      let authenCode = $("#authen-code").val();
      $.ajax({
          dataType: "JSON",
          data: {
              username: username,
              emailAddress: emailAddress,
              authenCode: authenCode
          },
          url: "/account/resetpwd",
          type: "POST",
          success: function(data) {
              if (data.status == 1) { // success
                  window.location.href = '/account/resetpwd2';
              } else if (data.status == 2) {  // no insert both username and emailadderss
                  alert("请输入用户名和邮箱!");
                  $("#user-name").val("");
                  $("#user-email").val("");
                  $("#authen-code").val("");
              } else if (data.status == 3) {
                  alert("验证码是123456!");  // authentication code is wrong
                  $("#user-name").val("");
                  $("#user-email").val("");
                  $("#authen-code").val("");
              }
              else if (data.status ==4) {
                  alert("验证错误!");  
                  $("#user-name").val("");
                  $("#user-email").val("");
                  $("#authen-code").val("");
              }
          },
          error: function(err) {
              alert("请求失败!");
          }
      });
  });
</script>