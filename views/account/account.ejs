<script type="text/javascript">
  $(document).ready(function () {
    if (sessionStorage.getItem('loggedIn'))
      document.getElementById("login-btn").innerHTML = "<i class=\"icon-bag3\"></i> 退出";
    else
      document.getElementById("login-btn").innerHTML = "<i class=\"icon-bag3\"></i> 登录";
  })
  $("#login-btn").click(function () {
    if (sessionStorage.getItem('loggedIn'))
      $.post("/account/exit", function (data) {
        if (data.status == 1) {
          alert("登出成功");
          sessionStorage.clear();
          window.location.href="/account/login";
        }
        if (data.status == 0) alert("登出失败");
      });
    else
      window.location.href = "/account/login";
  });
  $("#submit").click(function () {
    let d = $("#emailAddr").val();
    let e = $("#phoneNumber").val();
    let f = $("#realName").val();
    let g = $("#licenseNumber").val();
    let h = $("#dateOfBirth").val();

    if(! /^[a-zA-Z0-9_]+?@[a-zA-Z0-9_]+?(\.[a-zA-Z0-9_]+?)+$/.test(d))
    {
      alert("邮箱地址不合法");
      return ;
    }

    if(e[0]!='1' || e.length!=11)
    {
      alert("手机号不合法");
      return ;
    }

    var tempres=0;
    $.ajax({
      dataType: "JSON",
      data: { cardid:g },
      url: "/account/checkcardid",
      type: "POST",
      async: false,
      success: function (data) {
        tempres=data.status;
      }
    });
    if(!tempres)
    {
      alert("证件号码不合法");
      return ;
    }

    $.ajax({
      dataType: "JSON",
      data: {
        emailAddr: d,
        phoneNumber: e,
        realName: f,
        licenseNumber: g,
        dateOfBirth: h,
      },
      url: "/account/updateinfo",
      type: "POST",
      success: function (data) {
        if (data.status == 1) {
          window.location.href = "/account/account";
          alert("修改成功");
        }
        else if (data.status == 0) {
          alert("非法输入");
        }
        else if (data.status == -1) {
          alert("服务器错误");
        }
      }
    });
  });
  $("#cancle").click(function () {
    window.location.reload();
  });

</script>
